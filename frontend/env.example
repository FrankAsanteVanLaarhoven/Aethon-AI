# Strategic AI Platform - Environment Configuration

# Application
NEXT_PUBLIC_APP_NAME="Strategic AI Platform"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_ENV="development"

# API Configuration
NEXT_PUBLIC_API_BASE_URL="http://localhost:8000"
NEXT_PUBLIC_API_VERSION="v1"
NEXT_PUBLIC_WS_URL="ws://localhost:8000/ws"

# Authentication
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Database (if needed for frontend)
DATABASE_URL="postgresql://username:password@localhost:5432/strategic_ai"

# Redis (if needed for frontend caching)
REDIS_URL="redis://localhost:6379"

# Kafka (if needed for frontend)
KAFKA_BROKER_URL="localhost:9092"

# Security
NEXT_PUBLIC_ENABLE_SECURITY_CLEARANCE="true"
NEXT_PUBLIC_REQUIRE_AUTHENTICATION="true"

# Features
NEXT_PUBLIC_ENABLE_QUANTUM_FEATURES="true"
NEXT_PUBLIC_ENABLE_SOVEREIGN_FEATURES="true"
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES="true"

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""
NEXT_PUBLIC_MIXPANEL_TOKEN=""

# Monitoring
NEXT_PUBLIC_SENTRY_DSN=""
NEXT_PUBLIC_LOGROCKET_APP_ID=""

# Development
NEXT_PUBLIC_DEBUG_MODE="true"
NEXT_PUBLIC_ENABLE_DEV_TOOLS="true"
